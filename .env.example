# =============================================================================
# Example environment variables
# =============================================================================
# Template for required environment variables.
# Copy to the appropriate .env file:
#   cp .env.example .env
#
# Then edit the copied file and replace placeholder values.
#
# =============================================================================


# ========== GitHub Info ==========
GITHUB_USER=user_name
GITHUB_PROJECT=project_name

# ========== Database ==========
POSTGRES_CONTAINER=${GITHUB_PROJECT}-db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_DB=app_db
POSTGRES_PORT=5432

# ========== Backend ==========
BACKEND_IMAGE=${GITHUB_USER}/${GITHUB_PROJECT}-backend:latest
BACKEND_CONTAINER=${GITHUB_PROJECT}-backend
BACKEND_PORT=8000
DATABASE_HOST=db                     # Docker-to-Docker
# DATABASE_HOST=localhost              # Local
# DATABASE_HOST=host.docker.internal   # Container-to-Host
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DATABASE_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ========== Frontend ==========
FRONTEND_IMAGE=${GITHUB_USER}/${GITHUB_PROJECT}-frontend:latest
FRONTEND_CONTAINER=${GITHUB_PROJECT}-frontend
FRONTEND_PORT=3000
VITE_MODE=development
